@page "/Category"
@inject IService<Category> CategoryService
<h3>Allproducts</h3>
@if(MYcategories !=null)
{
<table class="table table-dark table-hover">
  <thead >
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">Operation</th>

    </tr>
  </thead>
  <tbody>
    @foreach (var item in MYcategories)
   {
       <tr>
           <td>@item.id</td>
           <td>@item.name</td>
           <td>  <a href="/Edit-cat/@item.id" class="btn btn-success ">Edit</a> </td>       
           
       </tr>
   }
  </tbody>
</table>
}
else
{
    <h1>Loading Data</h1>
    
}
@code {
	public List<Category> MYcategories { get; set; }
	protected override async Task OnInitializedAsync()
	{
		MYcategories =await CategoryService.getAll();
		await base.OnInitializedAsync();
	}
}
